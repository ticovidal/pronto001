<p id="notice"><%= notice %></p>

<h1>Subctegories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subctegories.each do |subctegory| %>
      <tr>
        <td><%= subctegory.name %></td>
        <td><%= subctegory.description %></td>
        <td><%= subctegory.category %></td>
        <td><%= link_to 'Show', subctegory %></td>
        <td><%= link_to 'Edit', edit_subctegory_path(subctegory) %></td>
        <td><%= link_to 'Destroy', subctegory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

