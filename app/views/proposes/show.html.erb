<%- model_class = Propose -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @propose.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:value) %></dt>
      <dd><pre class="prettyprint"><%= @propose.value %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:provider_id) %></dt>
      <dd><pre class="prettyprint"><%= @propose.provider_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:project_id) %></dt>
      <dd><pre class="prettyprint"><%= @propose.project_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              proposes_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_propose_path(@propose), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              propose_path(@propose),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>