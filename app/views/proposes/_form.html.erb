<%= form_for @propose, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :value, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :provider_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :provider_id, class: 'text_field form-control', value:current_user.profile.profileable_id %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :project_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  proposes_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
