



<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col-md-4 col-sm-12 col-md-offset-4"}) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'control-label col-xs-12', autofocus: true, autocomplete: "email" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'control-label col-xs-12', autocomplete: "new-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="">
    <%= f.submit "Continuar", class: 'btn btn-primary' %>
  </div>
<% end %>


