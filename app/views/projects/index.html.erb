<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:end) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:industry_id) %></th>
      <th><%= model_class.human_attribute_name(:visibility) %></th>
      <th><%= model_class.human_attribute_name(:mincost) %></th>
      <th><%= model_class.human_attribute_name(:maxcost) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <% if project.industry.profile.user.id == current_user.id or current_user.status == :superadmin %>
      <tr>
        <td><%= project.id %></td>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.end %></td>
          <td><%= project.category_id %></td>
          <td><%= project.industry_id %></td>
          <td><%= project.visibility %></td>
          <td><%= project.mincost %></td>
          <td><%= project.maxcost %></td>
        <td><%=l project.created_at, format: :long %></td>
        <td>
          <%= link_to project_path(project), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_project_path(project), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to project_path(project), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %> 
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_project_path,
            class: 'btn btn-primary' %>
