<%- model_class = Project -%>
<aside  class="col-md-3">
  <div class="col-sm-12 box-in" style="padding:35px;">
    <h4>Buscar projetos</h4>
    <br/>
    <input type="text" class='text_field form-control'/>
    <br/>
    <a href="#" class='btn btn-primary'>Buscar</a>
  </div>
  <div class="col-sm-12 box-in" style="margin-top:15px; padding:25px;">
    <h4>Categorias</h4>
    Todas as categorias
  </div>
</aside>
<section class="col-md-9">
  <div class="col-sm-12 box-in">
    <% @projects.each do |project| %>
      <div class="col-sm-12" style="padding: 25px 0px; border-bottom: 1px solid grey;">
        <h2><%= project.name %></h2>
        <%= project.description %><br/>
        <%= link_to "Saiba mais", project_path(project), class:'pull-right btn btn-primary', style:"width:auto; margin:auto;" %>
      
      </div>
    <% end %>
  </div>
</section>
