        <%= @project.maxcost %>//-->
  </section>
   

   <aside class="col-md-4 col-sm-12">
   <div class="col-sm-12 box-in box-mini">
     <h4>informações</h4>
     <br/>
     <br/>
     <table style="color:blue; width:100%">
       <tr>
         <td style="width:50%"><%= model_class.human_attribute_name(:category_id) %></td>
         <td style="width:50%"><%= @project.category_id %></td>
       </tr>
       <tr>
         <td><%= model_class.human_attribute_name(:subcategory_id) %></td>
         <td><%= @project.subcategory_id %></td>
       </tr>
       <tr>
         <td><%= model_class.human_attribute_name(:mincost) %></td>
         <td><%= @project.mincost %></td>
       </tr>
       <tr>
         <td><%= model_class.human_attribute_name(:visibility) %></td>
         <td><%= @project.visibility %></td>
       </tr>
       <tr>
         <td>Propostas</td>
         <td>--</td>
       </tr>
     </table>
   </div>

   <% if current_user.status == "industry" %>
     <a href="#" class="btn btn-primary btn-lateral col-md-6 col-sm-12">finalizar projeto</a>
   <% elsif current_user.status == "provider" %>
     <% if @projectp == false %>
         <button type="button" id="btnPropose" class="btn btn-primary modal-btn btn-lateral col-md-4 col-sm-12" style="margin-top: 27px;" data-toggle="modal" data-target="#modal"><span>Proposta</span></button>
     <% else %>
         <button type="button" id="btnPropose" class="btn btn-primary modal-btn btn-lateral col-md-4 col-sm-12" data-toggle="modal" data-target="#modal"><span>Editar<span></button>
         
     <% end %>
   

   <% end %>
   <a href="#" class="btn btn-primary btn-lateral col-md-4 col-sm-12 pull-right">mensagem</a>
   </aside>





</section>
