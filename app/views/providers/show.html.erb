<%- model_class = Provider -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>

  </dl>
  <dt class="label label-default">
     <% @provider.subcategories.each do |scat| %>
       <%= scat.name %>
     <% end %>

  </dt>
</div>

<h1><%= current_user.profile.profileable_type %></h1>
<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              providers_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_provider_path(@provider), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              provider_path(@provider),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>