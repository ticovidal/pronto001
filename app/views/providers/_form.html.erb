<%= form_for @provider, html: { class: 'form-horizontal' } do |f| %>
<h1>Cadastre-se como <%= current_user.status %></h1>
<h4>Etapa 3 de 3</h4>
<h3>Dados da empresa</h3>
<section class="col-sm-12 col-md-6">

<%= f.fields_for :enterprise do |enterprise_fields| %>
     <div class="form-group">
    <%= enterprise_fields.label :company, class: 'control-label col-md-2' %>
    <div class="col-md-10">
    <%= enterprise_fields.text_field :company %>
  </div>
  </div>

  <div class="form-group">
    <%= enterprise_fields.label :social, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= enterprise_fields.text_field :social %>
    </div>
  </div>

  <div class="form-group">
    <%= enterprise_fields.label :cnpj, class: 'control-label col-md-2' %>
    <div class="col-md-10">
    <%= enterprise_fields.text_field :cnpj %>
  </div>
  </div>
 </section>

<section class="col-sm-12 col-md-6">
  <div class="form-group">
    <%= enterprise_fields.label :enterpriseable_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
    <%= enterprise_fields.text_field :enterpriseable_id %>
  </div>
  </div>
    <% end %>

  <div class="form-group">
    <%= hidden_field_tag 'provider[subcategory_ids][]', nil %>
      <% Category.all.each do |category| %>
      <%= category.name %><br>
      <% Subcategory.where(category_id: category.id).each do |subcategory| %>
        <%= check_box_tag 'provider[subcategory_ids][]', subcategory.id, @provider.subcategory_ids.include?(subcategory.id), id: dom_id(subcategory) %>
        <%= label_tag dom_id(subcategory), subcategory.name %><br>
      <% end %>
        <hr>
      <% end %>

  </div>
  </section>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  providers_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
