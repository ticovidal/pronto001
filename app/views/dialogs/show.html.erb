<p id="notice"><%= notice %></p>
<style><%= ".style_#{current_user.profile.id}" %>{float: right !important; text-align:right !important;}</style>

      <% session[:dialog] = @dialog.id %>
<% if current_user.status == "provider" %><aside id="chat" class="col-md-9 box-in"><% end %>      
<aside id="showSpeech" style="height:350px; overflow: hidden; display:block">
  <% @dialog.speeches.each do |s| %>
    <p class="col-sm-10 style_<%= s.profile_id %>">
      <%= s.message %>
    </p>
  <% end %>
</aside>
<span></span>
<% if current_user.status == "provider" %></aside><% end %>

<div id="speechMessage"></div>
<script type="text/javascript">
  $("#speechMessage").load("<%= new_speech_path() %>");
  setInterval(function(){ 
  	$("#showSpeech").appendHTML("/dialogs-speeches");
  	var objDiv = document.getElementById("showSpeech");
     objDiv.scrollTop = objDiv.scrollHeight;
  	 }, 500);
  
</script>



