<%= form_for @adress, html: { class: 'form-horizontal col-md-8 col-md-offset-2' } do |f| %>
<% if request.path == new_adress_path %>
<h1>Cadastre-se como <%= current_user.status %></h1>
<h4>Etapa 2 de 3</h4>
<h3 class="headlogin">Dados do endereço</h3>
<% end %>
  <div class="form-group col-md-8">
    <%= f.label t('street'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :street, class: 'text_field form-control' %>
    </div>
  </div>


  
  <div class="form-group col-md-2">
    <%= f.label t('number'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :number, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group col-md-3">
    <%= f.label t('compl'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :compl, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group col-md-6">
    <%= f.label t('neighborhood'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :neighborhood, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group col-md-1">
    
  </div>


  <div class="form-group col-md-6">
    <%= f.label t('city'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :city, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group col-md-5">
    <%= f.label t('state'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :state, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group col-md-4">
    <%= f.label t('country'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :country, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group col-md-4">
    <%= f.label t('zip'), class: 'control-label' %>
    <div class="col-md-12">
      <%= f.text_field :zip, class: 'text_field form-control' %>
    </div>
  </div>

  
    
      <%= f.hidden_field :profile_id, value: current_user.profile.id, class: 'text_field form-control' %>
    

  <div class="form-group">
    <div class='col-md-offset-3 col-md-6'>
      <%= f.submit "Avançar", class: 'btn btn-primary' %>
     
    </div>
  </div>
<% end %>
