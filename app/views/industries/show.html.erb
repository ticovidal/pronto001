<%- model_class = Industry -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:team) %></dt>
      <dd><pre class="prettyprint"><%= @industry.team %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:technic) %></dt>
      <dd><pre class="prettyprint"><%= @industry.technic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:technic) %></dt>
      <dd><pre class="prettyprint"><%= @industry.enterprise.id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              industries_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_industry_path(@industry), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              industry_path(@industry),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>